<Window x:Class="Spammer3000.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Spammer3000" Height="300" Width="400">
    <Grid>
        <Label Content="Podaj tekst:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10" />
        <TextBox x:Name="ContentToSpam" HorizontalAlignment="Left" VerticalAlignment="Top" Width="356" Margin="10,30,0,0" Height="43" />

        <Label Content="Ile razy:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,77,0,0" />
        <TextBox x:Name="repeatCountInput" HorizontalAlignment="Left" VerticalAlignment="Top" Width="50" Margin="10,107,0,0" />

        <Label Content="Odstęp czasu (ms):" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,137,0,0" />
        <TextBox x:Name="DelayCount" HorizontalAlignment="Left" VerticalAlignment="Top" Width="50" Margin="10,168,0,0" />
        <Button Content="SPAM" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="10,225,0,0" Click="StartSpam" />

    </Grid>
</Window>
